<%- include('../partials/header.ejs') %>
<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
         
    <div class="carousel-indicators">
        <div class="carousel-indicators">
            <h1 class="text-cin">CINEMAS</h1>
        </div>  
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"
        aria-current="true" aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
        aria-label="Slide 2"></button>
    </div>

    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="https://media.discordapp.net/attachments/718002735475064874/846331963773419540/3.002.jpeg?width=1191&height=670"
          height="300px" width="100%" class="d-block w-100" alt="..." style="object-fit: cover;">
        <div class="carousel-caption d-none d-md-block">
          <div class="slider-btn">
            <!-- <h1 class="text-cin">CINEMAS</h1> -->
          </div>
        </div>
      </div>
      <div class="carousel-item">
        <img
          src="https://media.discordapp.net/attachments/718002735475064874/846331964017213450/3.001.jpeg?width=1191&height=670"
          height="300px" width="100%" class="d-block w-100" alt="..." style="object-fit: cover;">
        <div class="carousel-caption d-none d-md-block">
          <div class="slider-btn">
            <!-- <h1 class="text-cin">CINEMAS</h1> -->
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>

  <div class="row mb-2" >
    <% Cinemas.forEach(function(cinema){ %>
      <div class="col-md-6" style="width: 500px; margin-left: 90px;">
        <div class="row g-0 overflow-hidden position-relative cin-bb">
          <div class="col-auto d-none d-lg-block">
            <img src="<%= cinema.image %>" style="height: 250px;">
          </div>
          <div class="col p-4 d-flex flex-column position-static">
            <h3 class="mb-0"><%= cinema.name %></h3>
            &nbsp;
            <p class="card-text mb-auto"><%= cinema.desc %></p>
            <button class="btn-sho">Showtime</button>
          </div>
        </div>
      </div>
      <%}); %>
  </div>
  
    

<%- include('../partials/footer.ejs') %>