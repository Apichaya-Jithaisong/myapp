  <!-- Rank movie -->
  <div class="container-fluid">
    <div class="row row-cols-3 align-items-stretch justify-content-center py-2 mx-3">
      <% var i=1; Ranks.forEach(function(movie){ %>
        <div class="col mx-4" style="width: 200px;">
          <div class="card card-cover h-100" style="background-color: transparent; border: none; margin-top: 10px;">
            <a href="/movies/<%= movie._id %>">
              <h1 class="num" style="font-family: 'Montserrat', sans-serif;">
                <%= i %>
              </h1>
              <div class="container" style="width: 220px;">
                <img src="<%= movie.image %>" width="100%" height="250px" style="object-fit: cover;">
                <p class="lh-1 pt-2 text-white text-shadow-1" style="font-size: 18px; text-align: left;">
                  <%= movie.name %>
                </p>
              </div>
            </a>
          </div>
        </div>
        </a>
        <% i++; }); %>
    </div>
  </div>
  </div>
