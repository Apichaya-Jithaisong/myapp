<%- include('../partials/header2.ejs') %>
    <div class="video-container">
        <img class="mt-5" width="15%" src="https://media.discordapp.net/attachments/718002735475064874/840176537219366922/image0.png"
        style="margin-left: 1000px; margin-top: 95px;">
        <div class="container-fluid bg-box">
            <h1 class="invite">Create an accout it's free and always will be!</h1>
            <form action="/register" method="POST">
                <div class="mb-3">
                    <input type="text" class="form-control" name="username" placeholder="Username" required
                        title="Please Complete">
                </div>
                <div class="mb-3">
                    <input type="email" class="form-control" name="email" placeholder="Email" required
                        title="Please Complete">
                </div>
                <div class="mb-3">
                    <input type="password" class="form-control" name="password" placeholder="Password" required
                        title="Please Complete">
                </div>
                <div class="mb-3">
                    <input type="password" class="form-control" name="confirm" placeholder="Confirm Password" required
                        title="Please Complete">
                </div>

                <button type="submit" class="mt-3 btn btn-primary" id="btn-singup" style="margin-top: 10px;">Sign up</button>
            </form>
            <div class="container" style="height: 10px;"></div>
            <a class="mt-5" href="/login" id="btn-login">Login <ion-icon name="arrow-forward-outline" class="arrow"></ion-icon></a>
            
        </div>
        <video src="bg-log.mp4" muted loop autoplay></video>
    </div>


    <%- include('../partials/footer2.ejs') %>