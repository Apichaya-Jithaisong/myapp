<%- include('../partials/header2.ejs') %>

    <div class="container-fluid bg-sign">
        <div class="container-fluid bg-box">
            <img class="mt-5" width="40%" src="https://media.discordapp.net/attachments/718002735475064874/840176537219366922/image0.png" style="margin-top: 10%; margin-right: 0%;">
            <form action="/register" method="POST" >
                <div class="mb-3">
                    <input type="text" class="form-control" name="username" placeholder="Username" required title="Please Complete">
                </div>
                <div class="mb-3">
                    <input type="email" class="form-control" name="email" placeholder="Email" required title="Please Complete">
                </div>
                <div class="mb-3">
                    <input type="password" class="form-control" name="password" placeholder="Password" required title="Please Complete">
                </div>
                <div class="mb-3">
                    <input type="password" class="form-control" name="confirm" placeholder="Confirm Password" required title="Please Complete">
                </div>
               
                <button type="submit" class="mt-3 btn btn-primary" style="margin-top: 10px;">Register</button>
            </form>
            <p>&nbsp;</p>
            <a class="mt-5" href="/" style="margin-top: 20px;">Back to Home</a>
        </div>
    </div>


