<%- include('../partials/header.ejs') %>
<div class="container">
    <div class="py-5 text-center">
        <h2 class="text-new">Edit Movies</h2>
        <p class="lead">Please fill out the information completeily.</p>
    </div>
    <div class="col-12">
        <form action="/movies/<%= Movies._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="container-fluid" style="height: 100%; width: 60% auto; margin-top: -55px;">
                <div class="container-fluid mt-5 mb-5" style="width: 450px;">
                    
                    <div class="col-12">
                        <h5 class="text-name">Name</h5>
                        <input type="text" class="form-control bg-input" required="required" name="movies[name]" placeholder="Ex. Seobok" value="<%= Movies.name %>">
                    </div>
                    <h5 class="col-12 mb-3 mt-4 text-name">Description</h5>
                    <div class="col-12 mb-4 mx-2">
                        <div class="col-12 mb-3">
                            <label class="form-label fon-t">Genre</label>
                            <input type="text" class="form-control bg-inputcolor" required="required" name="movies[genre]" placeholder="Ex. Action/Drama" value="<%= Movies.genre %>">
                        </div>
                        <div class="col-12 mb-3">
                            <label class="form-label fon-t">Director</label>
                            <input type="text" class="form-control bg-inputcolor" required="required" name="movies[director]" placeholder="Ex. Apichaya Pleng" value="<%= Movies.director %>">
                        </div>
                        <div class="col-12 mb-3">
                            <label class="form-label fon-t">Runtime</label>
                            <input type="text" class="form-control bg-inputcolor" required="required" name="movies[runtime]" placeholder="Ex. 1h 12min" value="<%= Movies.runtime %>">
                        </div>
                        <div class="col-12 mb-3">
                            <label class="form-label fon-t">Score</label>
                            <input type="number" step="0.1" class="form-control bg-inputcolor" required="required" name="movies[score]" placeholder="Ex. 10.0" value="<%= Movies.score %>">
                        </div>
                        <div class="col-12 mb-3">
                            <label class="form-label fon-t">Show</label>
                            <input type="text" class="form-control bg-inputcolor" required="required" name="movies[show]" placeholder="Ex. n" value="<%= Movies.show %>">
                        </div>
                        <div class="col-12 mb-3">
                            <label class="form-label fon-t">Desc</label>
                            <input type="text" class="form-control bg-inputcolor" required="required" name="movies[desc]" placeholder="Ex. Once upon a time." value="<%= Movies.desc %>">
                        </div>
                    </div>
        
                    <h5 class="col-12 mb-3 text-name">Media</h5>
                    <div class="col-12 mb-5 mx-2">       
                        <div class="col-12 mb-3">
                            <img src="<%= Movies.image %>" height="100%" style="max-height: 150px;">
                            <label class="form-label fon-t" style="margin-left: 5px;">Poster
                                <input type="file" class="form-control bg-inputcolor" name="image" accept="image/*" style="width: 300px;">
                            </label>
                        </div>
                        <div class="col-12 mb-3">
                            <label class="form-label fon-t">Trailer</label>
                            <input type="url" class="form-control bg-inputcolor" name="movies[trailer]" required="required" placeholder="Ex. www.youtube.com/embed/...." value="<%= Movies.trailer %>">
                        </div>
                        <button class="btn btn-primary btn-submit" type="button" data-bs-toggle="modal" data-bs-target="#editModal">Submit</button>
                        <div class="modal fade" id="editModal" tabindex="-1">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" style="color: black;">Edit <%= Movies.name %> ?</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body" style="color: black;">
                                        Are you sure you want to edit <%= Movies.name %> ?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>                         
                                        <button type="submit" class="btn btn-success">Confirm</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>     
                </div>
            </div>
        </form>
    </div>
    
</div>



<%- include('../partials/footer.ejs') %>